		Список.Добавить("МобильныеCети", 				НСтр("ru='Мобильные сети'"));
		Список.Добавить("GPSИМобильныеCети", 			НСтр("ru='GPS и мобильные сети'"));
	ИначеЕсли Ключ = "ПоведениеДокументаБезКоординат" Тогда
		Список.Добавить("ЗапросПовторнойПопытки", 		НСтр("ru='Выводить запрос о повторной попытке'"));
		Список.Добавить("ПроводитьБезКоординат", 		НСтр("ru='Проводить документ без координат'"));
		Список.Добавить("ЗапрещатьПроводить", 			НСтр("ru='Запрещать проводить документ'"));
		Список.Добавить("ЗапрещатьПроводитьИСохранять", НСтр("ru='Запрещать проводить и сохранять документ'"));
	ИначеЕсли Ключ = "РежимСортировкиНоменклатуры" Тогда
