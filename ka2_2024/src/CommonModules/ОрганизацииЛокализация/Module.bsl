	Запрос.УстановитьПараметр("Организация", Организация);
	
	Результаты = Запрос.ВыполнитьПакет();
	
	ОсновнаяРегистрация = Результаты.Получить(2);
	РегистрацияКрупнейшего = Результаты.Получить(3);
	
	Если ОсновнаяРегистрация.Пустой() Тогда
		ОсновнаяРегистрацияИзСправочника = ОбщегоНазначенияУТВызовСервера.ЗначениеРеквизитаОбъекта(Организация, "РегистрацияВНалоговомОргане");
		Результат.Вставить("ОсновнаяРегистрация", ?(ЗначениеЗаполнено(ОсновнаяРегистрацияИзСправочника), ОсновнаяРегистрацияИзСправочника, Неопределено));
	Иначе
		Выборка = ОсновнаяРегистрация.Выбрать();
		Пока Выборка.Следующий() Цикл
			Результат.Вставить("ОсновнаяРегистрация", Выборка.РегистрацияВНалоговомОргане);
		КонецЦикла;
	КонецЕсли;
	
	Если Не РегистрацияКрупнейшего.Пустой() Тогда
		Выборка = РегистрацияКрупнейшего.Выбрать();
		Пока Выборка.Следующий() Цикл
			Результат.Вставить("РегистрацияКрупнейшего", Выборка.РегистрацияКрупнейшего);
		КонецЦикла;
	КонецЕсли;
	
	Возврат Результат;
КонецФункции

Процедура ОбработатьЗаполнениеРеквизитовКрупнейшегоНалогоплательщика(Параметры) Экспорт
	
	ПолноеИмяОбъекта = Метаданные.Справочники.Организации.ПолноеИмя();
	
	ОбновляемыеДанные = ОбновлениеИнформационнойБазы.ДанныеДляОбновленияВМногопоточномОбработчике(Параметры);
	Для Каждого ТекущаяОрганизация Из ОбновляемыеДанные Цикл
		
		НачатьТранзакцию();
		
		Попытка
			
			Блокировка = Новый БлокировкаДанных;
			
			ЭлементБлокировки = Блокировка.Добавить(ПолноеИмяОбъекта);
			ЭлементБлокировки.УстановитьЗначение("Ссылка", ТекущаяОрганизация.Ссылка);
			ЭлементБлокировки.Режим = РежимБлокировкиДанных.Исключительный;
			
			Блокировка.Заблокировать();
			
			РегистрацииОрганизации = ПолучитьРегистрацииВНалоговомОргане(ТекущаяОрганизация.Ссылка); // @skip-check query-in-loop
			
				ОрганизацияОбъект = ТекущаяОрганизация.Ссылка.ПолучитьОбъект();
				
				Если РегистрацииОрганизации.РегистрацияКрупнейшего = Неопределено Тогда
					// По организации нет ни одной регистрации в качестве крупнейшего налогоплательщика.
					ОрганизацияОбъект.КрупнейшийНалогоплательщик = Ложь;
				Иначе
					РеквизитыКрупнейшего = ОбщегоНазначенияУТВызовСервера.ЗначенияРеквизитовОбъекта(РегистрацииОрганизации.РегистрацияКрупнейшего,
																									"КПП,НаименованиеИФНС");
					ОрганизацияОбъект.КрупнейшийНалогоплательщикКПП = РеквизитыКрупнейшего.КПП;
					ОрганизацияОбъект.КрупнейшийНалогоплательщикНаименованиеНалоговогоОргана = РеквизитыКрупнейшего.НаименованиеИФНС;
					ОрганизацияОбъект.КрупнейшийНалогоплательщикРегистрацияВНалоговомОргане = РегистрацииОрганизации.РегистрацияКрупнейшего;
					ОрганизацияОбъект.КодНалоговогоОрганаПолучателя = ?(Не ЗначениеЗаполнено(ОрганизацияОбъект.КодНалоговогоОрганаПолучателя),
																			Лев(РеквизитыКрупнейшего.КПП, 4),
																			ОрганизацияОбъект.КодНалоговогоОрганаПолучателя);
					
				КонецЕсли;
				
				ОрганизацияОбъект.РегистрацияВНалоговомОргане = РегистрацииОрганизации.ОсновнаяРегистрация;
				ОрганизацияОбъект.КПП =  ОбщегоНазначенияУТВызовСервера.ЗначениеРеквизитаОбъекта(РегистрацииОрганизации.ОсновнаяРегистрация, "КПП");
				
				ОбновлениеИнформационнойБазы.ЗаписатьДанные(ОрганизацияОбъект);
			
			ЗафиксироватьТранзакцию();
			
		Исключение
			
			ОтменитьТранзакцию();
			
			ОбновлениеИнформационнойБазыУТ.СообщитьОНеудачнойОбработке(ИнформацияОбОшибке(), ТекущаяОрганизация.Ссылка);
			
		КонецПопытки;
		
	КонецЦикла;
	
	Параметры.ОбработкаЗавершена = ОбновлениеИнформационнойБазы.ОбработкаДанныхЗавершена(Параметры.Очередь, ПолноеИмяОбъекта);

